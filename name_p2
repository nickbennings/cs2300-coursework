#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main() {
    // Read Matrices A and B from files
    ifstream fileA("nbennings_mat1.txt");
    ifstream fileB("nbennings_mat2.txt");

    if (!fileA || !fileB) {
        cerr << "Error opening input files." << endl;
        return 1;
    }

    int rows, columns;
    fileA >> rows >> columns;
    int matA[100][100];
    int matB[100][100];

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            fileA >> matA[i][j];
            fileB >> matB[i][j];
        }
    }

    fileA.close();
    fileB.close();

    // Add Matrices A and B to get MatC
    int matC[100][100];

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            matC[i][j] = matA[i][j] + matB[i][j];
        }
    }

    // Write MatC to a file
    ofstream outfile("nbennings_p2_out12.txt");
    outfile << rows << " " << columns << endl;

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            outfile << matC[i][j] << " ";
        }
        outfile << endl;
    }

    outfile.close();

    return 0;
}
