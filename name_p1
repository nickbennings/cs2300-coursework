#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main() {
    string first_name = "Nicholas";
    string last_name = "Bennings";

    int rows = last_name.length();
    int columns = first_name.length();

    int mat1[100][100];

    int counter = 1;

    // Fill Mat1
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            mat1[i][j] = counter++;
        }
    }

    // Write Mat1 to a file
    ofstream outfile("nbennings_mat1.txt");
    outfile << rows << " " << columns << endl;

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            outfile << mat1[i][j] << " ";
        }
        outfile << endl;
    }

    outfile.close();

    return 0;
}
