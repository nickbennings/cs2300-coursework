                    double factor = matrix[k, i];
                    for (int j = 0; j <= m; j++)
                    {
                        matrix[k, j] -= factor * matrix[i, j];
                    }
                }
            }
        }

        // Extract the solutions from the last column
        for (int i = 0; i < n; i++)
        {
            solutions[i] = matrix[i, m];
        }

        return solutions;
